<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_forget"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.jeken.administrator.wenjiabao.ForgetActivity">

    <!--header-->
    <LinearLayout
        android:layout_alignParentTop="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <TextView
            android:padding="5dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/registerColor"
            android:clickable="true"
            android:onClick="backLoginListener"/>
        <TextView
            android:padding="5dp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/logo"/>

        <!--body-->
        <LinearLayout
            android:layout_centerVertical="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <!--帐号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="15sp"
                    android:text="帐号："/>

                <EditText
                    android:id="@+id/et_forget_username"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@drawable/edit_shape"
                    android:textSize="10sp"
                    android:drawableLeft="@drawable/ic_action_person"
                    android:hint="输入你的帐号"
                    android:digits="@string/username_input"
                    />
            </LinearLayout>


            <!--新密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="15sp"
                    android:text="新密码："/>
                <EditText
                    android:id="@+id/et_forget_newpasswd"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@drawable/edit_shape"
                    android:textSize="10sp"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_action_accounts"
                    android:hint="输入你的新密码"
                    />
            </LinearLayout>
            <!--确认密码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="15sp"
                    android:text="确认："/>
                <EditText
                    android:id="@+id/et_forget_confirm"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:background="@drawable/edit_shape"
                    android:textSize="10sp"
                    android:inputType="textPassword"
                    android:drawableLeft="@drawable/ic_action_accounts"
                    android:hint="输入确认新密码"
                    />
            </LinearLayout>
            <!--手机号-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="15sp"
                    android:text="手机："/>

                <EditText
                    android:id="@+id/et_forget_phone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textSize="10sp"
                    android:inputType="phone"
                    android:hint="输入手机号码"
                    android:background="@drawable/edit_shape"
                    android:drawableLeft="@drawable/tel"/>

            </LinearLayout>
            <!--手机验证码-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:layout_gravity="center"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3"
                    android:textSize="15sp"
                    android:text="验证码："/>

                <EditText
                    android:id="@+id/et_forget_check"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="7"
                    android:textSize="10sp"
                    android:inputType="number"
                    android:hint="输入短信的验证码"
                    android:background="@drawable/edit_shape"
                    android:drawableLeft="@drawable/sms"/>

            </LinearLayout>
            <TextView
                android:id="@+id/tv_forget_error"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="#D30A0A"
                />
            <!--按键-->
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center">
                <Button
                    android:id="@+id/btn_forget_change"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="修改"
                    android:background="#2BBBFD"
                    android:layout_marginRight="20dp"
                    android:onClick="submitListener"/>
                <Button
                    android:id="@+id/btn_forget_check"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    android:layout_marginLeft="20dp"
                    android:background="#2BBBFD"
                    android:text="获取验证码"
                    android:onClick="checkListener"
                    />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <TextView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="1、忘记密码可通过短信验证修改\n2、修改密码，可在此页面直接短信验证后修改\n"/>
</RelativeLayout>
