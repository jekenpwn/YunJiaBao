    <!--body-->
    <LinearLayout
        android:layout_centerVertical="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <!--帐号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15sp"
                android:text="帐号："/>
            <EditText
                android:id="@+id/et_register_username"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@drawable/edit_shape"
                android:textSize="15sp"
                android:hint="请输入帐号"
                android:drawableLeft="@drawable/ic_action_person"
                android:digits="@string/username_input"
                />
        </LinearLayout>
        <!--密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15sp"
                android:text="密码："/>
            <EditText
                android:id="@+id/et_register_passwd"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@drawable/edit_shape"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_action_accounts"
                android:hint="请输入密码"
                />
        </LinearLayout>

        <!--确认密码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15sp"
                android:text="确认："/>
            <EditText
                android:id="@+id/et_register_confirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:background="@drawable/edit_shape"
                android:textSize="15sp"
                android:inputType="textPassword"
                android:drawableLeft="@drawable/ic_action_accounts"
                android:hint="请输入确认密码"
                />
        </LinearLayout>

        <!--手机号-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15sp"
                android:text="手机："/>

            <EditText
                android:id="@+id/et_register_phone"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textSize="15sp"
                android:inputType="phone"
                android:hint="请输入你手机号码"
                android:background="@drawable/edit_shape"
                android:drawableLeft="@drawable/tel"/>

        </LinearLayout>
        <!--手机验证码-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >

            <TextView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:textSize="15sp"
                android:text="验证码："/>

            <EditText
                android:id="@+id/et_register_check"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="8"
                android:textSize="15sp"
                android:inputType="number"
                android:hint="请输入你短信的验证码"
                android:background="@drawable/edit_shape"
                android:drawableLeft="@drawable/sms"/>

        </LinearLayout>
        <TextView
            android:id="@+id/tv_register_error"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#D30A0A"
            />
        <!--按键-->
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:id="@+id/btn_register_submit"
                android:layout_alignParentLeft="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="注册"
                android:onClick="submitListener"
                android:textColor="#FFF"
                android:background="#2BBBFD"/>
            <Button
                android:id="@+id/btn_register_check"
                android:layout_marginRight="20dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取短信验证码"
                android:textColor="#FFF"
                android:onClick="smsListener"
                android:background="#2BBBFD"
                android:padding="5dp"
                />
        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>
